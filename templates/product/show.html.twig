{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row my-5">
			<div class="col-md-12">
				<div class="my-3 d-flex justify-content-start  align-items-center">

					<a href="{{path('order_store',{product: product.id})}}" class="btn btn-sm btn-outline-dark mx-1">Order now</a>
				</div>
				<div class="row">
					{% if product %}
						<div class="col-md-8">
							<div class="card">
								{% if product.image %}
									<img height="400" width="600" src="{{asset('uploads/images/'~product.image)}}" class="card-img-top" alt="{{product.name}}">
								{% else %}
									<img height="400" width="600" src="{{asset('uploads/images/not.jpg')}}" alt="{{product.name}}" class="card-img-top">
								{% endif %}
							</div>
						</div>
						<div class="col-md-4">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">{{product.name}}</h5>
									<p class="card-text">{{product.description}}</p>
									<h5>
										<span class="text text-danger">
											{{product.price}}DH
										</span>
									</h5>
									<h5>
										<span class="text text-success">
											{{product.category.name}}
										</span>
									</h5>
								</div>
							</div>
						</div>
					{% else %}
						<div class="alert alert-info">
							No product found!
						</div>
					{% endif %}
				</div>

			</div>
		</div>

	{% endblock %}
